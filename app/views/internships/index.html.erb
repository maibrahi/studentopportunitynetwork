<p id="notice"><%= notice %></p>

<h1>Listing Internships</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type Of Opportunity</th>
      <th>Company name</th>
      <th>Closing date</th>
      <th>Starting date</th>
      <th>Description text</th>
      <th>Location</th>
      <th>Confirmed</th>
      <th>Fulltime</th>
      <th>Paid</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= internship.title %></td>
        <td><%= internship.type_of_opportunity %></td>
        <td><%= internship.company_name %></td>
        <td><%= internship.closing_date %></td>
        <td><%= internship.starting_date %></td>
        <td><%= internship.description_text %></td>
        <td><%= internship.location %></td>
        <td><%= internship.confirmed %></td>
        <td><%= internship.fulltime %></td>
        <td><%= internship.paid %></td>
        <td><%= internship.salary %></td>
        <td><%= link_to 'Show', internship %></td>
        <td><%= link_to 'Edit', edit_internship_path(internship) %></td>
        <td><%= link_to 'Destroy', internship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

