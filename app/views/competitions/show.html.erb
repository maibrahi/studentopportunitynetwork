<style type="text/css">
.container{
  font-size: 16px;
}
.date-adjust{
  position: relative;
  left: 90px;
}
.col-md-10{
  padding-top: 30px;
  font-size: 18px;
  /*border-style:groove ;
  border-width: 1px;*/
}
</style>

<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <table border="0" class="table table-striped table-hover ">
    <col width = "190">
      <thead>
      
        <tr>
          <th><strong>Title:</strong></th>
          <th  id='main-table' ><%= @competition.title %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong>Type:</strong></td>
          <td><%= @competition.type_of_opportunity %></td>
        </tr>
      </tbody>
      <thead>
        <tr>
          <th><strong>Company name:</strong></th>
          <th  id='main-table' ><%= @competition.company_name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong>Description text:</strong></td>
          <td><%= @competition.description_text %></td>
        </tr>
      </tbody> 
      <thead>
        <tr>
          <th><strong>Location:</strong></th>
          <th><%= @competition.location %></th>
        </tr>
      </thead>
      <thead>
        <tr>
          <th><strong>Confirmed:</strong></th>
          <th><%= @competition.confirmed %></th>
        </tr>
      </thead>       
    </table>
    <table border="0" class="table table-striped table-hover ">
      <thead>
        <tr>
          <td><strong>Dates:</strong></td>
          <td class= "date-adjust"><%= @competition.starting_date %> <strong> &nbsp; &nbsp; &nbsp; &nbsp; To </strong></td>
          <td><%= @competition.closing_date %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>
<% if current_user == @competition.user %>
  <h3>Applications: </h3>
  <% @competition.comments.each do |comment| %>
    <div class="well">
      <%= comment.body %> <br>
    </div>

  <% end %>
<% end %>

<h3>New Application:</h3>
<%= form_for [@competition, Comment.new] do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", placeholder: "Add an application" %>
  </div>
  <%= f.submit  class: "btn btn-primary", value: "Submit Application" %>
<% end %>

<%= link_to 'Edit', edit_competition_path(@competition) %> |
<%= link_to 'Back', competitions_path %>
