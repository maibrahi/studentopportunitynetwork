<p id="notice"><%= notice %></p>

<h1>Listing Competitions</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <!--
      <th>Type</th>
    -->
      <th>Company name</th>
      <th>Closing date</th>
      <!--
      <th>Starting date</th>
    -->
      <th>Description text</th>
      <th>Location</th>
      <!--
      <th>Confirmed</th>
    -->
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.title %></td>
        <!--
        <td><%= competition.type_of_opportunity %></td>
      -->
        <td><%= competition.company_name %></td>
        <td><%= competition.closing_date %></td>
        <!--
        <td><%= competition.starting_date %></td>
      -->
        <td><%= competition.description_text %></td>
        <td><%= competition.location %></td>
        <!--
        <td><%= competition.confirmed %></td>
      -->
        <td><%= link_to 'Show', competition %></td>
        <!--
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

